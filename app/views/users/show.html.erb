<h4><%= @user.username %>'s Activity</h4>
<div class="col-xs-6">
  <div class="activity-list">
    <% @user.posts.sort_by(&:created_at).reverse.each do |post| %>
    <div class="activity-list-item">

      <p class="item-title"><%= link_to post.title, post_path(post) %></p>
    </div>
    <% end %>
  </div>
</div>
